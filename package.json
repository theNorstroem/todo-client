{
  "name": "todo-client",
  "version": "0.0.1",
  "description": "",
  "homepage": "",
  "repository": "git@github.com:theNorstroem/todo-client.git",
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "license": "MIT",
  "main": "src/app-shell.js",
  "scripts": {
    "start": "es-dev-server --open",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "build:modern": "rimraf dist && rollup -c rollup.config.modern.js",
    "build:compatibility": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "cd dist && es-dev-server --config ../es-dev-server-build.config.js --open",
    "lint:eslint": "eslint \"**/*.js\" --ignore-path .gitignore",
    "lint:eslint-fix": "eslint --fix \"**/*.js\" --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:eslint": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "uib:init": "./node_modules/@furo/ui-builder/_scripts/init-with-hook.js",
    "uib:generate": "./node_modules/@furo/ui-builder/_scripts/generate-components.js",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --compatibility all --coverage"
  },
  "dependencies": {
    "@furo/collection": "^1.3.37"
  },
  "peerDependencies": {
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.9.4",
    "@open-wc/eslint-config": "^4.0.1",
    "@open-wc/prettier-config": "^1.1.0",
    "@open-wc/semantic-dom-diff": "^0.19.3",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@open-wc/testing-karma-bs": "^1.3.94",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "es-dev-server": "^1.57.8",
    "eslint": "^7.14.0",
    "eslint-plugin-lit": "^1.2.4",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "koa-proxies": "^0.11.0",
    "lint-staged": "^10.5.2",
    "mocha": "^8.2.1",
    "npm-watch": "^0.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.0",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-workbox": "^5.2.1",
    "webpack-merge": "^5.4.0",
    "workbox-expiration": "^5.1.4"
  },
  "watch": {
    "uib:generate": {
      "patterns": [
        "ui_specs"
      ],
      "extensions": "u33e",
      "runOnChangeOnly": false
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.0"
  },
  "eslintConfig": {
    "globals": {
      "assert": "writable"
    },
    "plugins": [
      "lit"
    ],
    "env": {
      "browser": true
    },
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier",
      "plugin:lit/recommended"
    ],
    "rules": {
      "import/no-cycle": 1,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true,
          "bundledDependencies": true,
          "packageDir": [
            "./",
            "./node_modules/@furo/collection"
          ]
        }
      ]
    }
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
